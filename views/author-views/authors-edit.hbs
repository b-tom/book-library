<h2>Edit the book: {{author.title}}</h2>

<form action="/authors/edit/{{author._id}}" method="post">

  <label for="full-name-input">First Name:
  <input type="text" name="fullName" id="first-name-input" value="{{author.fullName}}" />
  </label>

  <label for="date-of-birth">Date Of Birth
  <input type="date" name='dateOfBirth' id="date-of-birth" value='{{author.dateOfBirth}}'/>
  </label>

  <label for="nacionality">Nacionality
  <input type="text" name='nacionality' id="nacionality" value="{{author.nacionality}}"/>
  </label>

  <label for="award-winner">Award Winner?
  <input type="radio" name='awardWinner' id="award-winner" value='{{author.awardWinner}}' />
  </label>

    <label for="author-image">Author Image
    <input type="text" nam='image' id='author-image' value='{{author.image}}'>
  </label>

  <button type="submit">Save changes</button>

</form>
