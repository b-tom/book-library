<h1>{{book.title}}</h1>
<hr>

<div class='detailsContainer'>
  <div class='details'>
    <p><b>Written by:</b></p>
    <ul>
      {{#each book.author}}
        <li><a href="/authors/details/{{_id}}">{{fullName}}</a></li>
      {{/each}}
    </ul>
    <p><b>Summary:</b> {{book.description}}</p>
    <p><b>Rating:</b> {{book.rating}}/10</p>
  </div>
  <img src="{{book.image}}" alt="{{book.title}} picture">
</div>

<hr>
<div class='detailsLinkContainer'>
  <a href="/books/edit/{{book._id}}">Edit</a>
  <a href="/books">Back</a>
</div>
<form action="/books/delete/{{book._id}}" method="post"><button>Delete</button></form>

<div>
  {{#unless book.comments}}
    <p>No comments yet</p>
  {{/unless}}

  {{#each book.comments}}
    <p><b> {{ this.author.username }} </b> {{this.content}}</p>
  {{/each}}
</div>
<div>
  <h3>Add a comment</h3>
  <form action="/books/details/{{book._id}}/comment" method="POST">
  <textarea name="content" id="" cols="30" rows="10"></textarea>
  <button type='submit'>Comment</button>
  </form>
</div>